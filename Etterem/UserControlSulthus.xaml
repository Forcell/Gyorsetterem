        <StackPanel Grid.Column="1" Grid.Row="2" Margin="25">
            <Label x:Name="SulthusNev3" VerticalAlignment="Top" Content="Sülthüs" FontSize="25" FontWeight="Bold"/>
            <Label x:Name="SulthusAr3" Grid.Column="1" Content="Ár: 250$" FontSize="25" FontWeight="Bold"/>
            <Label x:Name="SulthusId3" Grid.Column="1" Content="Id: 263462396" FontSize="25" Foreground="LightGray"/>
        </StackPanel>
        <Button Grid.Column="2" Grid.Row="2" Margin="30" Content="Kosárba" FontSize="25" Height="60" Click="Sulthus3_Click"/>

        <!--Sülthüs #4-->
