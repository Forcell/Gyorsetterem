            <Label x:Name="SulthusNev4" VerticalAlignment="Top" Content="Sülthüs" FontSize="25" FontWeight="Bold"/>
            <Label x:Name="SulthusAr4" Grid.Column="1" Content="Ár: 250$" FontSize="25" FontWeight="Bold"/>
            <Label x:Name="SulthusId4" Grid.Column="1" Content="Id: 263462396" FontSize="25" Foreground="LightGray"/>
        </StackPanel>
        <Button Grid.Column="2" Grid.Row="3" Margin="30" Content="Kosárba" FontSize="25" Height="60" Click="Sulthus4_Click"/>

        <!--Sülthüs #5-->
        <Rectangle x:Name="SulthusKep5" Grid.Column="0" Grid.Row="4" Margin="36,30,36,30"/>
