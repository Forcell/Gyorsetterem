            <Label x:Name="HamburgerId4" Grid.Column="1" Content="" FontSize="25" Foreground="LightGray"/>
        </StackPanel>
        <Button Grid.Column="2" Grid.Row="3" Margin="30" Content="Kosárba" FontSize="25" Height="60" Click="Hamburger4_Click"/>

