            <Label x:Name="HamburgerId2" Grid.Column="1" Content="" FontSize="25" Foreground="LightGray"/>
        </StackPanel>
        <Button Grid.Column="2" Grid.Row="1" Margin="30" Content="Kosárba" FontSize="25" Height="60" Click="Hamburger2_Click"/>

        <!--3. sor-->
