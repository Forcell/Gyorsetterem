<UserControl x:Class="Etterem.UserControlHamburger"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Etterem"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Margin="20 5 20 10" Grid.Column="0" Background="Aqua" HorizontalAlignment="Stretch" Height="100" VerticalAlignment="Top" BorderBrush="Black" BorderThickness="1">
            
        </Border>
        <TextBlock Text="Hamburger - $10.00" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0 0 0 30" Foreground="Black"/>
        <Button Content="Kosárba" FontSize="10" VerticalAlignment="Bottom" HorizontalAlignment="Center" Height="20" Width="80" Margin="0 0 0 8"/>
    </Grid>
</UserControl>
