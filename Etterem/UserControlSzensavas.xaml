            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--Szénsavas #1-->
        <Rectangle x:Name="SzensavasKep1" Grid.Column="0" Grid.Row="0" Margin="36,30,36,30"/>
