            <Label x:Name="SzensavasNev1" VerticalAlignment="Top" Content="Szénsavas" FontSize="25" FontWeight="Bold"/>
            <Label x:Name="SzensavasAr1" Grid.Column="1" Content="Ár: 250$" FontSize="25" FontWeight="Bold"/>
            <Label x:Name="SzensavasId1" Grid.Column="1" Content="Id: 263462396" FontSize="25" Foreground="LightGray"/>
        </StackPanel>
        <Button Grid.Column="2" Grid.Row="0" Margin="30" Content="Kosárba" FontSize="25" Height="60" Click="Szensavas1_Click"/>

